{

    "manifest_version": 2,
    "name": "Ragequit Reformatted",
    "version": "0.1.0",

    "description": "Reformats ragequit.gr forum. Changes dimensions of user icons and info. Removes users' signatures",
    "homepage_url": "https://github.com/vanchann/rq_reformatted.git",

    "icons": {
        "48": "/icons/evangelos_48.png",
        "96": "/icons/evangelos_96.png"
    },

    "content_scripts": [
        {
            "matches": ["*://ragequit.gr/Forum/*"],
            "js": ["rq_reformatted.js"]
        }
    ]

}
